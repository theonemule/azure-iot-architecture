{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "provisioningServiceName": {
            "defaultValue": "",
            "type": "String",
			"metadata": {
				"description": "Name of the Devie Provisioning Service."
			}			
        },
        "ioTHubName": {
            "defaultValue": "",
            "type": "String",
			"metadata": {
				"description": "Name of the IoT Hub."
			}			
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Devices/provisioningServices",
            "apiVersion": "2022-02-05",
            "name": "[parameters('provisioningServiceName')]",
			"location": "[resourceGroup().location]",
            "sku": {
                "name": "S1",
                "tier": "Standard",
                "capacity": 1
            },
			"properties": {
				"iotHubs": [
					{
						"connectionString": "[format('HostName={0};SharedAccessKeyName=iothubowner;SharedAccessKey={1}', reference(resourceId('Microsoft.Devices/IotHubs', parameters('ioTHubName'))).hostName,  listkeys(resourceId('Microsoft.Devices/IotHubs/IotHubKeys', parameters('ioTHubName'),'iothubowner'), '2018-04-01').primaryKey)]",
						"location": "[resourceGroup().location]"
					}
				],			
				"dependsOn": [
					"[resourceId('Microsoft.Devices/IotHubs', parameters('ioTHubName'))]"
				]
			}
        },
        {
            "type": "Microsoft.Devices/IotHubs",
            "apiVersion": "2022-04-30-preview",
            "name": "[parameters('ioTHubName')]",
			"location": "[resourceGroup().location]",
            "sku": {
                "name": "S1",
                "tier": "Standard",
                "capacity": 1
            },
            "identity": {
                "type": "None"
            }
        }
    ]
}
